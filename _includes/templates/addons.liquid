<div class="addons-wrap d-flex flex-column overflow-y-auto">
    <div class="status d-flex flex-justify-between p-2">
        <div class="title p-1">
            <i class="fa fa-book"></i> {{ site.title }}
        </div>
        <div class="branch p-1">
            <span class="name">
                Options
            </span>
            <i class="fa fa-caret-down"></i>
        </div>
    </div>
    <div class="addons d-flex flex-column height-full p-2 d-none">
        <dl>
            <dt>{{ __.github | default: "GitHub" }}</dt>
            <dd>
                <a href="https://mega.nz/folder/Ndwi1bAK#oLWNhH_g-h0p4BoT4c556A" title="download archived OPL builds wich are no longer available on github">
                    <i class="fa fa-download"></i>
                    {{ __.homepage | default: "Archive" }}
                </a>
            </dd>
            <dd>
                <a href="https://github.com/ps2homebrew/Open-PS2-Loader/releases" title="Download latest OPL directly from github">
                    <i class="fa fa-download"></i>
                    {{ __.download | default: "Download" }}
                </a>
            </dd>
            <dd>
                <a href="{{ docs.issues_url }}" title="Report a game compatibility state">
                    <i class="fa fa-question-circle-o"></i>
                    {{ __.issues | default: "Open report" }}
                </a>
            </dd>
        </dl>
        <hr>
        <div class="license f6 pb-2">
            This
            <a href="{{ site.baseurl }}/" title="{{ site.title }}">Software</a>
            is under the terms of
            <a href="{{ docs.repository_url }}">{{ docs.license.name | default: "The Unlicense" }}</a>.
        </div>
    </div>
</div>
